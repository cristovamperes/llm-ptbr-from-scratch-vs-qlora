{
  "experiment": {
    "name": "cpt_qlora_llama31_8b_brwac10k",
    "seed": 42,
    "cost_usd_per_hour": 0.30
  },
  "model": {
    "name_or_path": "meta-llama/Llama-3.1-8B",
    "use_4bit": true,
    "bnb_4bit_quant_type": "nf4",
    "bnb_4bit_use_double_quant": true,
    "bnb_4bit_compute_dtype": "bfloat16"
  },
  "lora": {
    "r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05,
    "bias": "none",
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ]
  },
  "data": {
    "dataset_jsonl": "versions/trilha2-lora/datasets/brwac_cpt_10k.jsonl",
    "text_field": "text",
    "seq_len": 2048,
    "valid_split": 0.05
  },
  "training": {
    "output_dir": "versions/trilha2-lora/outputs/cpt_qlora_llama31_8b_brwac10k",
    "num_train_epochs": 3,
    "per_device_train_batch_size": 2,
    "per_device_eval_batch_size": 2,
    "gradient_accumulation_steps": 8,
    "gradient_checkpointing": true,
    "learning_rate": 2e-4,
    "weight_decay": 0.01,
    "warmup_steps": 100,
    "lr_scheduler_type": "cosine",
    "logging_steps": 10,
    "eval_steps": 200,
    "save_steps": 500,
    "save_total_limit": 3,
    "bf16": true
  }
}

